{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@client": ["./src/client/*"],
      "@server": ["./src/server/*"]
    },
    "sourceMap": true,
    "incremental": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}